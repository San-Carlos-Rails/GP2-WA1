
<div class="custom-container">
<p id="notice"><%= notice %></p>

<h3 class="text-center">Topics</h3>
  <div class="well">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @topics.each do |topic| %>
        <tr>
          <td><%= link_to topic.title, topic %></td>
          <td><%= pluralize(topic.votes.count, "vote") %></td>
          <td><%= button_to '+1', upvote_topic_path(topic), method: :post, :class=>"img-rounded" %></td>
          <td><%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure?' },  :class=>"btn btn-danger"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
<br>

<%= link_to 'New Topic', new_topic_path, { :class=>"pull-right btn btn-info" }  %>

</div>